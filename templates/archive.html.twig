{% extends 'base.html.twig' %}
{% block body %}
    <h1>
        Archive
    </h1>

    {% for blogpost in blogposts %}
        <article>
            <h1><a href="{{ app.url_generator.generate('archiveblogpost', {year: blogpost.postDate|date("Y"), month: blogpost.postDate|date("F"), id: blogpost.postID} ) }}">{{ blogpost.postTitle }}</a></h1>
            <p>{{ blogpost.postContent }}</p>
            <p><small>On {{ blogpost.postDate }} by {{ blogpost.authorName }}</small></p>
        </article>
    {% endfor %}

    <p><a href="{{ app.url_generator.generate('index') }}">Back to homepage</a></p>

{% endblock %}